{
    "python.jediEnabled": false,
    "python.formatting.yapfPath": "yapf",
    "python.linting.flake8Path": "flake8",
    "python.linting.pylintPath": "pylint",
    "python.venvPath": "~/venv/",
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    }
}
